 int
+xauth_login_script(char *user, char *pwd)
+{
+	pid_t pid, rpid;
+	int ret;
+
+	setenv("username", user, 1);
+	setenv("password", user, 1);
+
+	pid = fork();
+	if (pid == (pid_t)0) {
+		execl(xauth_external_config.script->v, xauth_external_config.script->v,(char *) NULL);
+		exit (127);
+	} else if (pid <= (pid_t)0)
+		ret = -1;
+	else {
+		do {
+			rpid = waitpid (pid, &ret, 0);
+		} while (rpid == -1 && errno == EINTR);
+		if (rpid != pid)
+			ret = -1;
+	}
+
+	unsetenv("password");
+
+	if (WIFEXITED(ret)) {
+		if (WEXITSTATUS(ret) > 0)
+			ret = -1;
+		else
+			ret = 0;
+	}
+
+	return (ret);
+}
